<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    tools:context="com.mecodroid.notestrore.ui.fragment.homeCycle.HomeFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_fragment_recycler_view_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dim_1"
        android:background="@color/dark_blue"
        android:padding="@dimen/dim_1" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/home_fragment_btn_float_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dim_10"
        android:background="@color/white"
        android:backgroundTint="@color/dark_blue"
        android:src="@drawable/vector_add_white24"
        app:backgroundTint="@color/white"
        app:fabSize="normal" />

</RelativeLayout>